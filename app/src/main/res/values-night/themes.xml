<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_orange</item>
        <item name="colorPrimaryVariant">@color/brand_night_grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brand_night_black</item>
        <item name="colorSecondaryVariant">@color/brand_orange</item>
        <item name="colorOnSecondary">@color/text_dark_grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="colorOnSurface">@color/text_dark_grey</item>
        <item name="colorOnPrimarySurface">@color/brand_grey</item>
    </style>

    <style name="NavigationViewItemStyleCustom" parent="Theme.App2">
        <item name="listPreferredItemPaddingLeft">0dp</item>
        <item name="listPreferredItemPaddingRight">0dp</item>
    </style>

    <style name="ToolbarTitleStyle" parent="">
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">25sp</item>
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextLoginStyle" parent="">
        <item name="fontFamily">@font/avenir_next</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textFontWeight">1000</item>
    </style>

    <style name="TextHomeTitleStyle" parent="">
        <item name="fontFamily">@font/avenir_next</item>
        <item name="android:textColor">@color/brand_dark_blue</item>
        <item name="android:textFontWeight">1000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextHomeSubtitleStyle" parent="">
        <item name="fontFamily">@font/avenir_next</item>
        <item name="android:textColor">@color/brand_dark_blue</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="circleNavImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="colorContainer">@color/brand_grey</item>
    </style>

    <style name="circleRvItemImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="plusButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/OrangeButtonOverlay</item>
    </style>

    <style name="OrangeButtonOverlay">
        <item name="colorPrimary">@color/brand_orange</item>
        <item name="colorOnSurface">@color/brand_orange</item>
    </style>
</resources>