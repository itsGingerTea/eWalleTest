<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_home_cont"
    android:paddingHorizontal="28dp"
    android:paddingVertical="20dp"
    android:layout_margin="4dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/iv_contact_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/boy_list"
        android:scaleType="fitCenter"
        app:shapeAppearanceOverlay="@style/circleRvItemImageView"
        android:background="@drawable/bg_rv_item_image_view"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_contact_name"
        app:layout_constraintStart_toStartOf="@id/iv_contact_avatar"
        app:layout_constraintEnd_toEndOf="@id/iv_contact_avatar"
        app:layout_constraintTop_toBottomOf="@id/iv_contact_avatar"
        tools:text="Mike"
        android:textSize="12sp"
        android:textAppearance="@style/TextHomeSubtitleStyle"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>