<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_nav_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/colorOnPrimarySurface"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="?attr/colorOnPrimarySurface"
        app:layout_constraintBottom_toBottomOf="parent"
        app:shapeAppearanceOverlay="@style/circleNavImageView"
        app:srcCompat="@drawable/girl_list" />

    <TextView
        android:id="@+id/tv_nav_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="@string/nav_header_title"
        android:textColor="?attr/colorOnPrimary"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintStart_toEndOf="@id/iv_nav_header"
        app:layout_constraintTop_toTopOf="@id/iv_nav_header"
        app:layout_constraintBottom_toBottomOf="@id/iv_nav_header"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="8dp"
        android:paddingEnd="24dp"
        android:fontFamily="@font/avenir_next"
        android:textFontWeight="1000"
        android:textSize="19sp"/>

    <TextView
        android:id="@+id/tv_nav_header_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nav_header_subtitle"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintStart_toStartOf="@id/tv_nav_header_title"
        app:layout_constraintTop_toBottomOf="@id/tv_nav_header_title"
        android:fontFamily="@font/avenir_next"
        android:textFontWeight="800"
        android:textSize="12sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>